{
  "plugins": [
    "react",
    "react-native",
    "@stylistic"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "env": {
    "react-native/react-native": true
  },
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "@stylistic/quotes": [
      "error",
      "single"
    ],
    "@stylistic/indent": [
      "error",
      2
    ],
    "@stylistic/semi": [
      "error",
      "always"
    ]
  }
}